<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="CONSOLE_LOG_PATTERN" value="%d{HH:mm:ss.SSS} %-5level - %msg [%logger{5} %thread]%n"/>
	
	<include resource="org/springframework/boot/logging/logback/base.xml" />

	<logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="DEBUG" />
	<logger name="org.jooq" level="DEBUG" />
	<logger name="net.mycorp" level="DEBUG" />
	
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>d:\Logs\mybot.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>mybot.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-4relative --- [ %thread{10} ] %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <root level="INFO">
        <appender-ref ref="FILE"/> <!-- File로 로그를 남기고자 할 때 사용 -->
    </root>

</configuration>